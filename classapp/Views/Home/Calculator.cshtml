@{
    ViewBag.Title = "My Page Calculator";
}
<!DOCTYPE html>
<html>
<head>

    <title>Service Calculator</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #e0eafc, #cfdef3);
            color: #333;
            line-height: 1.6;
        }

        .container {
            padding: 20px 40px;
            max-width: 800px;
            margin: 20px auto;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        input[type="text"], input[type="number"], input[type="button"], .output {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ddd;
            width: calc(100% - 22px);
        }

        input[type="button"] {
            background-color: #023047;
            color: white;
            cursor: pointer;
        }

            input[type="button"]:hover {
                background-color: #004c4c;
            }

        .output {
            background-color: #f0f0f0;
        }


    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Want to hire me?</h2>
        <form id="calculatorForm">
            <label for="hours">Enter number of hours you wish to hire me for:</label>
            <input type="number" id="hours" name="hours" min="1" required>

            <label for="rate">Hourly Rate ($):</label>
            <input type="text" id="rate" name="rate" value="25" readonly>

            <input type="button" value="Calculate" id="calculateButton">


            <label for="total">Total Cost ($):</label>
            <input type="text" class="output" id="total" name="total" readonly>
        </form>
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>

